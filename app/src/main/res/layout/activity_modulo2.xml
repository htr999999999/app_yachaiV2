<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Modulo2">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <VideoView
            android:id="@+id/videoView2"
            android:layout_width="match_parent"
            android:layout_height="242dp" />
    </RelativeLayout>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Durante este curso aprenderás los enfoques del liderazgo, moldear tu estilo y trabajar junto a equipos productivos para alcanzar metas a través de una mejor toma de decisiones."/>

    <TableLayout
        android:layout_marginTop="5dp"
        android:background="@color/btncolor"
        android:layout_width="match_parent"
        android:layout_height="59dp">

        <TableRow
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detalles de curso" />
        </TableRow>

        <TableRow

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:drawableStart="@drawable/icono"
                android:text=" Módulos: 4" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:drawableStart="@drawable/icono1"
                android:text=" Horas: 4" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:drawableStart="@drawable/icono2"
                android:textSize="13dp"
                android:text=" Principiante" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/icono3"
                android:text=" Sin coste" />
        </TableRow>

    </TableLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="25dp"

        android:background="?android:attr/listDivider" />

    <ListView
        android:id="@+id/listvieww"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>